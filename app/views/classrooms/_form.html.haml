  .row  
    .col-md-5
      .input-group.input-group-sm.col-md-7
        %span.input-group-addon Room #
        = f.text_field :room_number, :placeholder => "AudB", class: "form-control classroom_room_number", :input_html => { :tabindex => '1' }
    
      %br
      %br
    
      .input-group.input-group-sm.col-md-7
        %span.input-group-addon rmrecnbr
        = f.text_field :rmrecnbr, :placeholder => "2018729", class: "form-control", :input_html => { :tabindex => '2' }  
  
      %br
      %br

      = fields_for @classroom.location, :html => {multipart: true, class: 'classroom_form'} do |loc|
        .input-group.input-group-sm.col-md-8
          %span.input-group-addon Name:
          = loc.text_field :name, placeholder: "Angell Hall AudB", class: "form-control classroom_location_attributes_name", id: ""
     
      %br 
      %br
      .row
        .sr-only
          = label_tag(:location_id, "Building")
        = f.collection_select:location_id, @locations.order(:name), :id, :name,   {:prompt => "What Building is this room in?"}, {:class => "form-control input-sm ", style: "width: 60%;"}
      = link_to "Add a building", new_building_path, :style => "position: relative; left: 70%; bottom: 23px;", :target => "_blank"
  
      %br
    
      .sr-only
        = label_tag(:DEPT_GRP, "Department")
      = f.select:DEPT_GRP, options_for_select([['College of LSA','COLLEGE_OF_LSA'], ['School of Dentistry', 'SCHOOL_DENTISTRY']]),{:prompt => "Department?"},class: "form-control input-sm ", style: "width: 40%;"
  
      %br
      .rows
        .sr-only
          = label_tag(:department_name, "Owner")
