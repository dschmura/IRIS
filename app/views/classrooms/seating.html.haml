:css
  @media print{
    @page {size: auto; margin: auto;}
      .content_bu{
          
          -webkit-transform: rotate(-90deg) scale(1.3, 1.3) translateX(-170px);
          -moz-transform: rotate(90deg);
            -o-transform: rotate(90deg) ;
            -ms-transform: rotate(90deg);
            transform: rotate(90deg) translateX(-170px);
          filter:progid:DXImageTransform.Microsoft.BasicImage(rotation=3);
          float: left;
          
        }
      
        a:link:after, a:visited:after {
          content: "";
        }
      
        
        #classroom_qr_code{
          width: 200px;
          max-width: 200px;
        }
        #classroom_image{
          width: 500px;
          max-width: 500px;
        }
        #back_to_classroom_link{
          display: none;
        }
        #header{
          display: none;
        }
        footer{
          display: none;
        }
        #seating_chart img{
          max-height: 40%;
          width: 550px;
          max-width: 550px;
          }
     
      }

:css
  @media print{
      a:link:after, a:visited:after {
        content: "";
      }
      }
:css
  #back_to_classroom_link{
    clear: left;
  }
  #classroom_image{
    clear: both;
    margin-bottom: 30px
    }
  #seating_chart img{
    max-height: 40%;
    }  
      
.row.center-block
  .col-md-4
    %h2
      = link_to @page_title, @classroom
    
    %h4
      Student Capacity:
      = @classroom.student_capacity
  
    -#%h3
      Feel free to rearrange but,
      Please put tables and chairs back
    %h3
      Please return the furniture to this arrangement when finished.
 
    %br
    %br

    = link_to (image_tag "../classrooms/#{@classroom.facility_code_heprod}.png" , class: "col-md-9", id: "classroom_qr_code"), @classroom
  
    #back_to_classroom_link
      = link_to @page_title, @classroom

  .col-md-8
    = image_tag @classroom.location.picture.url(:show).to_s, :alt => @classroom_alt, id: "classroom_image", class: "col-md-10 col-md-offset-1" 

    #seating_chart
      -#= image_tag "seating/CHEM1800_chairs.png"
      = image_tag  "seating/#{@classroom.facility_code_heprod}_chairs.png"
     


      
    



    
